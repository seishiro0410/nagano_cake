<p id="notice"></p>
<div class="container">
<h1>商品新規登録</h1>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>商品説明</h4>
      <%= f.text_area :introduction %>
    <h4>ジャンル</h4>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    <h4>税抜価格</h4>
      <%= f.text_field :price %>円
    <h4>販売ステータス</h4>
      <%= f.radio_button :is_action, "true" %>
      <%= f.label :is_action, "販売中" %>
      <%= f.radio_button :is_action, "false" %>
      <%= f.label :is_action, "販売停止中" %>
    <p>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </p>
  <% end %>
</div>