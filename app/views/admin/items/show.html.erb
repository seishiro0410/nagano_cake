<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <h1>商品詳細</h1>
      </div>
    </div>

    <div class="row g-12 center">
      <%= image_tag @item.get_image,size: "200x150" %>
      <div class="col-lg-9">
        <table>

          <tr><th>商品名</th><td><%= @item.name %></td></tr>

          <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>

          <tr><th>ジャンル名</th><td><%= @item.genre_id %></td></tr>

          <tr><th>税込価格（税抜価格）</th><td><%= @item.price %>(<%= @item.add_tax_price.to_s(:delimited) %>) 円</td></tr>

          <tr><th>販売ステータス</th><td>
                <% if @item.is_active == true %>
                  <font color="green">販売中</font>
                <% elsif @item.is_active == false %>
                  販売停止中
                <% end %>
          </td></tr>
          <td><%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
          </td>
        </table>
      </div>
    </div>
  </div>
