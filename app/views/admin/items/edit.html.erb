<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-2">
        <h1>商品編集</h1>
      </div>
    </div>


    <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
    <div class="row">
    <div class="col-md-2 py-3 offset-4">
      商品画像
    </div>
    <div class="col-md-5 py-3">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="col-md-2 py-3 offset-4">
      商品名
    </div>
    <div class="col-md-5 py-3">
      <%= f.text_field :name, class:"w-50" %>
    </div>
    <div class="col-md-2 py-3 offset-4">
      商品説明
    </div>
    <div class="col-md-5 py-3">
      <%= f.text_area :introduction, class:"w-50" %>
    </div>
    <div class="col-md-2 py-3 offset-4">
      ジャンル
    </div>
    <div class="col-md-5 py-3">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
    <div class="col-md-2 py-3 offset-4">
      税抜価格
    </div>
    <div class="col-md-5 py-3">
      <%= f.text_field :price, class:"w-50" %>円
    </div>
    <div class="col-md-2 py-3 offset-4">
      販売ステータス
    </div>
    <div class="col-md-5 py-3">
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "販売停止中" %>
    </div>
    <div class="col text-center">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
   </div>
  <% end %>
</div>