<p id="notice"></p>
  <div class="container">
    <h3>会員一覧</h3>
     <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="4"></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <% name = customer.first_name.to_s + customer.last_name.to_s %>
              <td><%= link_to name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == true %>
                  無効
                <% elsif customer.is_deleted == false %>
                  <font color="green">有効</font>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>



</div>