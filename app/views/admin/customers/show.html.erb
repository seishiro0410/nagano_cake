<p id="notice"></p>
  <div class="container">
    <%= @customer.first_name %><%= @customer.last_name %><p>さんの会員詳細</p>

      <table>

      <tr><th>会員ID</th><td><%= @customer.id %></td></tr>

      <tr><th>氏名</th><td><%= @customer.first_name %><%= @customer.last_name %></td></tr>

      <tr><th>カナ</th><td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td></tr>

      <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>

      <tr><th>住所</th><td><%= @customer.address %></td></tr>

      <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>

      <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>

      <tr><th>会員ステータス</th><td>
        <% if @customer.is_deleted == true %>
          無効
        <% elsif @customer.is_deleted == false %>
          <font color="green">有効</font>
        <% end %></td></tr>

    </table>
    <p><%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success" %></p>





  </div>
