<p id="notice"></p>
<div class="container">
<%= @customer.first_name %><%= @customer.last_name %><p>さんの会員情報編集</p>

    <table>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>

        <tr><th>氏名</th><td><%= f.text_field :first_name %></td><td><%= f.text_field :last_name %></td></tr>

        <tr><th>フリガナ</th><td><%= f.text_field :first_name_kana %></td><td><%= f.text_field :last_name_kana %></td></tr>

        <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>

        <tr><th>住所</th><td><%= f.text_field :address %></td></tr>

        <tr><th>電話番号</th><td><%= f.text_field :telephone_number %></td></tr>

        <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>

        <tr><th>販売ステータス</th>
        <td><%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会" %>
        </td></tr>

        <td><%= f.submit '編集内容を保存', class: "btn btn-success" %></td>
      <% end %>
    </table>
</div>

