        <div class="container">
          <p id="notice"></p>
          <h2>ジャンル一覧・追加</h2>

          <%= form_with model: @genre, url: admin_genres_path do |f| %>

              <div class="field">
                <%= f.label :name, "ジャンル名" %>
                <%= f.text_field :name, class: 'form-control' %>
                <%= f.submit '新規登録', class: "btn btn-success" %>
              </div>
          <% end %>
        </div>


        <div class="row">
          <div class="col-lg-8">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        </div>
      </div>


