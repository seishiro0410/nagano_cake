<p id="notice"></p>
  <div class="container">
    <div class="row">
      <h1></h1>
        <div class="col-lg-6">
          <%= image_tag @item.get_image, size: "300x200" %>
        </div>

        <div class="col-lg-6">
          <h2><%= @item.name %></h2>
          <h3><%= @item.introduction %></h3>
          <div class="font-large">￥<%= @item.price %></div><div class="font-small">（税込）</div>
          <div>
            <%= form_with model: @cart_item, url: cart_items_path do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit 'カートに入れる', class: "btn btn-success" %>
            <% end %>

          </div>
        </div>
    </div>
  </div>
