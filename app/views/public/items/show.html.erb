<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h1></h1>
      </div>
    </div>

      <div class="row">
        <div class="col-md-4 offset-2">
          <%= image_tag @item.get_image, size: "300x200" %>
        </div>


        <div class="col-md-4">
          <h2><%= @item.name %></h2>
          <h3><%= @item.introduction %></h3>
          <div class="col-md-6">￥<%= (@item.price * 1.1).floor %>（税込）</div><div class="font-small"></div>
          <p></p>
          <p></p>
        </div>
        </div>
          <div class="row">
            <div class="col-md-3 offset-6">
            <%= form_with model: @cart_item, url: cart_items_path do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit 'カートに入れる', class: "btn btn-success" %>
            <% end %>
            </div>
          </div>
          <p></p>
        </div>
    </div>
  </div>
