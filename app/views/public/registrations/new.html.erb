<p id="notice"></p>
  <div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <h2>新規会員登録</h2>
  <div class="row">
    <div class="col-lg-12">
      <div class="field">
          <%= f.label :名前 %>
         （姓）<%= f.text_field :first_name %>
       （名）<%= f.text_field :last_name %>
        </div>
      </div>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）
    <%= f.text_field :first_name_kana %>
    （メイ）
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <%= render "public/shared/links" %>からログインしてください


</div>


