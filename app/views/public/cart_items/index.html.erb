<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h2>ショッピングカート</h2>
      </div>
      <div class="col-md-7">
        <%= form_with model: @cart_item, url: cart_items_destroy_all_path do |f| %>
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %>
        <% end %>
      </div>
    </div>

    <div class ="row">
    <table class = "table table-bordered" >

        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th colspan="5"></th>
            </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
                <td><%= image_tag cart_item.item.get_image,size: "70x50" %><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price%></td>
                <td>
                    <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
                      <%= f.select :amount, *[1..10] %>
                      <%= f.submit '変更', class: "btn btn-success" %>
                    <% end %>
                    </td>
                <td><%= cart_item.subtotal%></td>
                <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %></td>
                <td><% @total_amount +=  cart_item.subtotal %></td>

            </tr>
          <% end %>
        </tbody>

      </table>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= link_to "買い物を続ける", homes_top_path, class: "btn btn-primary" %>
        </div>
        <div class="col-md-4">
          <table class = "table table-bordered" >
            <tr>
              <td>
                合計金額
              </td>
              <td>
                <%= @total_amount %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="text-center">
            <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
  </div>

