<p id="notice"></p>
  <div class="container">
    <%= form_with model: @address, url: addresses_path do |f| %>
            <div>
              <label>郵便番号（ハイフンなし）</label>
              <div><%= f.text_field :postal_code, class: 'form-control' %></div>
            </div>
            <div>
              <label>住所</label>
              <div><%= f.text_field :address, class: 'form-control' %></div>
            </div>
            <div>
              <label>宛名</label>
              <div><%= f.text_field :name, class: 'form-control' %></div>
            </div>
            <div>
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
    <% end %>

      <table class = "border" >

        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan="4"></th>
            </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                  <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %>
                </td>

            </tr>
          <% end %>
        </tbody>

      </table>




  </div>
