<p id="notice"></p>
<div class="container">
<h1>配送先編集</h1>

    <table>
      <%= form_with model: @address, url: address_path do |f| %>
        <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>

        <tr><th>住所</th><td><%= f.text_field :address %></td></tr>

        <tr><th>宛名</th><td><%= f.text_field :name %></td></tr>

        <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
      <% end %>
    </table>
</div>
